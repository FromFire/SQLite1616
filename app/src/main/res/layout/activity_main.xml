<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nametv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30sp"
        android:textSize="20sp"
        android:text="NAME:"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <EditText
        android:id="@+id/nameet"
        app:layout_constraintLeft_toRightOf="@+id/nametv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:theme="@style/MyEditText"
        android:textSize="20sp"
        android:textColor="@color/colorRose"
        />

    <TextView
        android:id="@+id/emailtv"
        app:layout_constraintTop_toBottomOf="@+id/nametv"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:text="EMAIL:"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <EditText
        android:id="@+id/emailet"
        app:layout_constraintLeft_toRightOf="@+id/emailtv"
        app:layout_constraintTop_toBottomOf="@+id/nameet"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:theme="@style/MyEditText"
        android:textSize="20sp"
        android:textColor="@color/colorRose"
        />

    <TextView
        android:id="@+id/numbertv"
        app:layout_constraintTop_toBottomOf="@+id/emailtv"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:text="MOBILE NUMBER:"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <EditText
        android:id="@+id/numberet"
        app:layout_constraintLeft_toRightOf="@+id/numbertv"
        app:layout_constraintTop_toBottomOf="@+id/emailet"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="205dp"
        android:theme="@style/MyEditText"
        android:textSize="20sp"
        android:textColor="@color/colorRose"
        />
    <TextView
        android:id="@+id/sqltv"
        app:layout_constraintTop_toBottomOf="@+id/numberet"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:textColor="@color/colorRose"
        />

<Button
    android:id="@+id/writebtn"
    android:layout_width="80dp"
    android:layout_height="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="15dp"
    app:layout_constraintLeft_toLeftOf="@+id/sqltv"
    android:text="WRITE"
    android:textSize="14sp"
    android:textColor="#FFFFFF"
    android:background="@color/colorPrimaryDark"
    />
    <Button
        android:id="@+id/readbtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/writebtn"
        android:text="READ"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        />
    <Button
        android:id="@+id/updatebtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/readbtn"
        android:text="UPDATE"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"

        />
    <Button
        android:id="@+id/removebtn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/updatebtn"
        android:text="REMOVE"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"
        />
</androidx.constraintlayout.widget.ConstraintLayout>